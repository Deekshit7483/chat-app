<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingTop="6dp"
		android:paddingRight="8dp"
		android:paddingBottom="6dp"
		android:background="@android:color/transparent"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/im_avatar"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/upload_1"
			app:civ_border_width="2dp"
			app:civ_border_color="#008DCD"
			app:civ_circle_background_color="#FFFFFF"
			app:civ_border_overlay="true" />
		<LinearLayout
			android:id="@+id/l_data"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tx_name"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:text="chat app user"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<ImageView
					android:id="@+id/im_verified"
					android:focusable="false"
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:layout_marginLeft="2dp"
					android:paddingTop="2dp"
					android:src="@drawable/ic_verified"
					android:scaleType="fitCenter"
					android:layout_gravity="center_vertical" />
				<ImageView
					android:id="@+id/im_mute"
					android:focusable="false"
					android:layout_width="14dp"
					android:layout_height="14dp"
					android:layout_marginLeft="5dp"
					android:layout_marginTop="1dp"
					android:layout_marginRight="5dp"
					android:src="@drawable/ic_volume_off_grey"
					android:scaleType="centerInside" />
			</LinearLayout>
			<TextView
				android:id="@+id/tx_lasted_message"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="3dp"
				android:text="Hello how are you\?"
				android:textSize="14sp"
				android:textColor="#000000"
				android:singleLine="true"
				android:layout_weight="1" />
		</LinearLayout>
		<TextView
			android:id="@+id/time"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="12"
			android:textSize="12sp"
			android:textColor="#9E9E9E" />
	</LinearLayout>
</LinearLayout>
