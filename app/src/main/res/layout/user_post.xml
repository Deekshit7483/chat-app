<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear15"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="2dp"
		android:orientation="vertical"
		android:layout_gravity="center_horizontal|center_vertical">
		<LinearLayout
			android:id="@+id/linear17"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:orientation="horizontal">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/circleimageview2"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/users"
				android:layout_gravity="center_horizontal|center_vertical"
				app:civ_border_width="3dp"
				app:civ_border_color="#008DCD"
				app:civ_circle_background_color="#FFFFFF"
				app:civ_border_overlay="true" />
			<TextView
				android:id="@+id/textview1"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="username"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="#000000" />
		</LinearLayout>
		<TextView
			android:id="@+id/textview2"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:padding="8dp"
			android:text="caption"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="#000000" />
		<ImageView
			android:id="@+id/imageview3"
			android:focusable="false"
			android:layout_width="300dp"
			android:layout_height="300dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:src="@drawable/gngg"
			android:scaleType="fitXY"
			android:layout_gravity="center_horizontal|center_vertical" />
		<LinearLayout
			android:id="@+id/linear16"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="2dp"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/imageview4"
				android:focusable="false"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:src="@drawable/ic_favorite_outline_black"
				android:scaleType="fitXY"
				android:layout_gravity="center_horizontal|center_vertical" />
			<ImageView
				android:id="@+id/imageview5"
				android:focusable="false"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:src="@drawable/ic_mode_comment_black"
				android:scaleType="fitXY"
				android:layout_gravity="center_horizontal|center_vertical" />
			<ImageView
				android:id="@+id/imageview6"
				android:focusable="false"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginLeft="5dp"
				android:src="@drawable/ic_send_black"
				android:scaleType="fitXY"
				android:layout_gravity="center_horizontal|center_vertical" />
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:id="@+id/textview3"
		android:focusable="false"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:padding="8dp"
		android:text="No post here"
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:layout_gravity="center_horizontal|center_vertical" />
</LinearLayout>
