<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_main2"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left|top"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal"
					android:layout_gravity="top">
					<LinearLayout
						android:id="@+id/linear_blank"
						android:layout_width="40dp"
						android:layout_height="5dp"
						android:layout_margin="3dp"
						android:padding="8dp"
						android:orientation="vertical" />
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/im_avatar"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/upload_1"
						app:civ_border_width="2dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#FFFFFF"
						app:civ_border_overlay="true" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/l_message"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="3dp"
					android:paddingLeft="5dp"
					android:paddingTop="3dp"
					android:paddingRight="5dp"
					android:paddingBottom="3dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear_ad"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="left|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/tx_sender_name"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="3dp"
							android:text="Telme messanger"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="#65A9E0"
							android:singleLine="true"
							android:layout_weight="1" />
						<ImageView
							android:id="@+id/im_verified"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginTop="1dp"
							android:layout_marginRight="2dp"
							android:src="@drawable/ic_verified"
							android:scaleType="center" />
						<TextView
							android:id="@+id/tx_admin"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="5dp"
							android:padding="3dp"
							android:text="~ Admin"
							android:textSize="12sp"
							android:textColor="#527DA3" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/l_repl"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="#EEEEEE"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/l_reply"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="4dp"
							android:background="#EEEEEE"
							android:orientation="vertical">
							<TextView
								android:id="@+id/tx_reply_name"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="3dp"
								android:text="Telme"
								android:textSize="12sp"
								android:textStyle="bold"
								android:textColor="#65A9E0"
								android:singleLine="true" />
							<TextView
								android:id="@+id/tx_reply_msg"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="3dp"
								android:text="Hello how are you\?"
								android:textSize="12sp"
								android:textColor="#000000"
								android:singleLine="true" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear_msg"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="bottom"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/tx_sender_message"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="3dp"
							android:text="Hello how are you\?"
							android:textSize="16sp"
							android:textColor="#000000"
							android:layout_gravity="center_horizontal|center_vertical"
							android:layout_weight="1" />
						<LinearLayout
							android:id="@+id/linear4"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="bottom"
							android:orientation="horizontal">
							<TextView
								android:id="@+id/tx_msg_time"
								android:focusable="false"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginLeft="5dp"
								android:gravity="bottom"
								android:text="11:10 PM"
								android:textSize="12sp"
								android:textColor="#9E9E9E" />
							<ImageView
								android:id="@+id/im_send_dn"
								android:focusable="false"
								android:layout_width="15dp"
								android:layout_height="15dp"
								android:layout_marginLeft="5dp"
								android:src="@drawable/ic_done_all_white"
								android:scaleType="centerInside" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/l_voice"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="3dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/im_play"
							android:focusable="false"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:src="@drawable/ic_play_arrow_white"
							android:scaleType="fitCenter" />
						<SeekBar
							android:id="@+id/seekbar1"
							android:focusable="false"
							android:layout_width="100dp"
							android:layout_height="wrap_content"
							android:paddingLeft="8dp"
							android:paddingTop="4dp"
							android:paddingRight="8dp"
							android:paddingBottom="4dp"
							android:layout_weight="1" />
						<TextView
							android:id="@+id/tx_voice_name"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="3dp"
							android:text="3:50"
							android:textSize="14sp"
							android:textColor="#000000" />
						<ImageView
							android:id="@+id/im_voice_send"
							android:focusable="false"
							android:layout_width="15dp"
							android:layout_height="15dp"
							android:src="@drawable/ic_done_all_white"
							android:scaleType="centerInside" />
						<TextView
							android:id="@+id/tx_voice_send_time"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:paddingBottom="3dp"
							android:gravity="bottom"
							android:text="12:10 PM"
							android:textSize="12sp"
							android:textColor="#9E9E9E" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear_file"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/im_file"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="3dp"
							android:src="@drawable/icon_file_doc"
							android:scaleType="center" />
						<TextView
							android:id="@+id/tx_file_name"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="5dp"
							android:paddingTop="3dp"
							android:paddingRight="5dp"
							android:paddingBottom="3dp"
							android:text="Telme.apk"
							android:textSize="16sp"
							android:textColor="#000000"
							android:layout_weight="1" />
						<ImageView
							android:id="@+id/im_send_file"
							android:focusable="false"
							android:layout_width="15dp"
							android:layout_height="15dp"
							android:src="@drawable/ic_done_all_white"
							android:scaleType="centerInside" />
						<TextView
							android:id="@+id/tx_send_file_time"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:paddingLeft="8dp"
							android:paddingTop="8dp"
							android:paddingRight="8dp"
							android:paddingBottom="3dp"
							android:gravity="bottom"
							android:text="12:20 PM"
							android:textSize="12sp"
							android:textColor="#9E9E9E" />
					</LinearLayout>
					<ImageView
						android:id="@+id/thumbs"
						android:focusable="false"
						android:layout_width="200dp"
						android:layout_height="120dp"
						android:src="@drawable/default_image"
						android:scaleType="center" />
					<ImageView
						android:id="@+id/imageview1"
						android:focusable="false"
						android:layout_width="180dp"
						android:layout_height="210dp"
						android:src="@drawable/default_image"
						android:scaleType="center"
						android:layout_gravity="center_horizontal|center_vertical" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
